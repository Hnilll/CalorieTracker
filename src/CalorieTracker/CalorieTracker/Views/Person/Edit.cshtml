@model CalorieTracker.Entities.Person

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-warning">
            <h4 class="mb-0 text-dark">Editace údajů</h4>
        </div>
        <div class="card-body">
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="PersonID" />

                <div class="mb-3">
                    <label class="form-label">Jméno</label>
                    <p class="form-control-plaintext">@Model.PName</p>
                    <input type="hidden" asp-for="PName" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Věk</label>
                    <input asp-for="Age" class="form-control" />
                </div>


                <div class="mb-3">
                    <label class="form-label">Váha</label>
                    <input asp-for="Weight" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Výška</label>
                    <input asp-for="Height" class="form-control" />
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Person" class="btn btn-outline-secondary">Zrušit</a>
                    <button type="submit" class="btn btn-success">Uložit a zobrazit změny</button>
                </div>
            </form>
        </div>
    </div>
</div>