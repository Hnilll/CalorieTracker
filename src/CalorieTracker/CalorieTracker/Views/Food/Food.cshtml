@using CalorieTracker.Models
@using CalorieTracker.Entities
@model List<CalorieTracker.Entities.Food> 

@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background: linear-gradient(180deg, #D400FF 0%, #000 100%);
		font-family: Arial;
	}

    .addBtn
    {
		background-color: white;
        border: solid;
		border-color: white;
        color: black;
		margin-bottom: 20px;
		border-radius: 10px;
		
        
	}

    .addBtn:hover
    {
			border-color: black;
    }
    td
    {
        color: white;
	}

    table
    {
        border:solid;
        border-radius: 30px;
    }

    button {
       border-radius: 30px;
    border: 3px solid #FFF;

    background: linear-gradient(95deg, #D9D9D9 6.35%, #737373 93.28%);


    }
 
    .title
    {
        color: #FFF;
        font-family: Inter;
        font-size: 50px;
        font-style: normal;
        font-weight: 600;
        line-height: normal;
	}

</style>


<h1 class="title">Dish list</h1>
@*<button type="button" class="addBtn" data-bs-toggle="modal" data-bs-targer="#foodModal">Add dish</button>*@

<a class="btn btn-secondary" asp-controller="Food" asp-action="Create">Add dish</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>TotalCal</th>
            <th>Weight</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Food food in Model)
        {
            <tr>
                <td>@food.Name</td>
                <td>@food.TotalCal</td>
				<td>@food.Weight</td> 
                <td>
                    <a class="btn btn-secondary" asp-controller="Food" asp-action="Ingredients" asp-route-id="@food.FoodId">Detail</a>
                    
                    <button style="color: red">Delete</button>
                </td>
            </tr>
        }
	</tbody>
    </table>





<div class="modal fade" id="foodModal" tabindex="-1" aria-labelledby="foodModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="foodModalLabel">Add Food Entry</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-controller="FoodV" asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Food Name</label>
                        <input type="text" name="Name" class="form-control" placeholder="e.g. Apple" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Calories</label>
                        <input type="number" name="TotalCal" class="form-control" placeholder="0" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>

        </div>
    </div>
</div>